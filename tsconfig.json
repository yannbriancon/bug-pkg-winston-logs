{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": ".",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "dist"
  },
  "include": ["src"]
}
