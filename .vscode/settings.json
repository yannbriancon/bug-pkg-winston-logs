{
    "[javascript]": {
      "editor.formatOnSave": false
    },
    "[typescript]": {
      "editor.formatOnSave": false
    },
    "eslint.validate": [
      "javascript",
      "typescript",
      "json",
      "html"
    ],
    "stylelint.enable": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "vetur.validation.templateProps": true,
    "markdownlint.config": {
      "no-duplicate-heading": { "siblings_only": true }
    }
}